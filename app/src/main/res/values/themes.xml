<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android_instagram_clone" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Splash Activity Theme -->
    <style name="SplashTheme" parent="Theme.Android_instagram_clone">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/app_main_gradient</item>
        <item name="android:statusBarColor">@color/app_color_2</item>
        <item name="android:navigationBarColor">@color/app_color_1</item>
    </style>

    <!--SignIn and  SingUp themes-->
    <style name="SingIn_and_SignUp" parent="Theme.Android_instagram_clone">
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/app_color_1</item>
    </style>
</resources>